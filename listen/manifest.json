{
  "manifest_version": 3,
  "name": "Listen - AI语音朗读助手",
  "version": "1.0.0",
  "description": "使用 AI 朗读网页内容，支持多语言和自然语音。",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://texttospeech.googleapis.com/*",
    "https://api.deepseek.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/design-system.css",
        "css/content.css"
      ]
    }
  ],
  "options_page": "options.html",
  "commands": {
    "read-selection": {
      "description": "朗读当前选中文本"
    },
    "stop-reading": {
      "description": "停止朗读"
    },
    "ocr-and-read": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "OCR截图并朗读"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "css/*.css",
        "images/*",
        "lib/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}